{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "@joingo.vip/native-x",
      "@joingo.vip/core",
      "@joingo.vip/storage",
      "@joingo.vip/http",
      "@joingo.vip/http-ruoyi",
      "@joingo.vip/security",
      "@joingo.vip/security-authentication",
      "@joingo.vip/authentication-middleware"
    ],
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts", "src/**/*.mts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
